{
  "name": "designer-punk-v2",
  "version": "6.3.0",
  "description": "True Native cross-platform design system with mathematical foundations",
  "main": "./dist/TokenEngine.js",
  "module": "./dist/browser/designerpunk.esm.js",
  "browser": "./dist/browser/designerpunk.esm.js",
  "types": "./dist/TokenEngine.d.ts",
  "exports": {
    ".": {
      "import": "./dist/browser/designerpunk.esm.js",
      "require": "./dist/TokenEngine.js",
      "types": "./dist/TokenEngine.d.ts"
    },
    "./BlendUtilities": {
      "import": "./dist/BlendUtilities.web.ts",
      "require": "./dist/BlendUtilities.web.ts",
      "types": "./dist/BlendUtilities.web.ts",
      "default": "./dist/BlendUtilities.web.ts"
    },
    "./blend": {
      "import": "./dist/blend/index.js",
      "require": "./dist/blend/index.js",
      "types": "./dist/blend/index.d.ts"
    },
    "./tokens.css": "./dist/browser/tokens.css"
  },
  "scripts": {
    "generate:types": "ts-node scripts/generate-token-types.ts",
    "prebuild": "npm run generate:types",
    "build": "tsc --skipLibCheck && npm run build:validate && npm run build:browser",
    "build:browser": "node scripts/build-browser-bundles.js",
    "build:watch": "tsc --watch --skipLibCheck",
    "build:verify": "node verify-build.js",
    "build:validate": "npx ts-node src/validators/buildValidation.ts",
    "test": "jest --testPathIgnorePatterns='performance/__tests__|__tests__/performance|PerformanceValidation'",
    "test:all": "jest",
    "test:performance": "jest --testPathPatterns='performance/__tests__|__tests__/performance'",
    "test:performance:isolated": "jest --config jest.performance.config.js --runInBand",
    "test:quick": "jest --testPathIgnorePatterns='(performance|integration)'",
    "test:watch": "jest --watch --testPathIgnorePatterns='performance/__tests__|__tests__/performance'",
    "test:coverage": "jest --coverage --testPathIgnorePatterns='performance/__tests__|__tests__/performance'",
    "release:analyze": "npx ts-node src/release-analysis/cli/release-analyze.ts",
    "release:analyze:quick": "npx ts-node src/release-analysis/cli/quick-analyze.ts",
    "evaluate:artifacts": "npx ts-node src/release-analysis/cli/evaluate-artifacts.ts",
    "evaluate:methods": "npx ts-node src/release-analysis/cli/evaluate-methods.ts",
    "benchmark:performance": "npx ts-node src/release-analysis/cli/performance-benchmark.ts",
    "benchmark:quick": "npx ts-node src/release-analysis/cli/performance-benchmark.ts -- --quick",
    "benchmark:stress": "npx ts-node src/release-analysis/cli/performance-benchmark.ts -- --stress",
    "benchmark:compare": "npx ts-node src/release-analysis/cli/performance-benchmark.ts -- --compare",
    "hooks:install": "npx ts-node src/release-analysis/cli/manage-hooks.ts install",
    "hooks:uninstall": "npx ts-node src/release-analysis/cli/manage-hooks.ts uninstall",
    "hooks:validate": "npx ts-node src/release-analysis/cli/manage-hooks.ts validate",
    "hooks:status": "npx ts-node src/release-analysis/cli/manage-hooks.ts status",
    "validate:release-setup": "node scripts/validate-release-setup.js",
    "diagnose:release-issues": "node scripts/diagnose-release-issues.js",
    "audit:tokens": "node scripts/audit-component-tokens.js",
    "audit:tokens:detailed": "node scripts/audit-component-tokens.js -- --detailed",
    "serve": "python3 -m http.server 8001",
    "server": "python3 -m http.server 8001",
    "figma:push": "npx ts-node src/cli/figma-push.ts",
    "figma:extract": "npx ts-node src/cli/figma-extract.ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.7.1",
    "esbuild": "^0.27.2",
    "fast-check": "^4.4.0",
    "figma-console-mcp": "^1.10.1",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "madge": "^8.0.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@octokit/rest": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.3.1",
    "uuid": "^13.0.0"
  }
}
