{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "CI/CD optimized configuration for GitHub Actions - Automated releases without prompts",
  
  "workingDirectory": ".",
  "dryRun": false,
  "skipConfirmation": true,
  "verbose": true,
  
  "github": {
    "owner": "${GITHUB_OWNER}",
    "repo": "${GITHUB_REPO}",
    "token": "${GITHUB_TOKEN}",
    "createRelease": true,
    "uploadArtifacts": true,
    "draft": false,
    "prerelease": false
  },
  
  "npm": {
    "registry": "https://registry.npmjs.org",
    "token": "${NPM_TOKEN}",
    "publish": true,
    "access": "public",
    "tag": "latest"
  },
  
  "packages": {
    "coordination": "synchronized",
    "updateDependencies": true,
    "packages": [
      {
        "name": "@your-org/core",
        "path": "./packages/core"
      }
    ]
  },
  
  "validation": {
    "requireCompletionDocs": true,
    "requireBreakingChangeDoc": true,
    "validateSemanticVersioning": true,
    "allowManualOverride": false
  }
}
