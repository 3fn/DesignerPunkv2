{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "Development configuration with dry run - Safe testing without actual publishing (Last Reviewed: 2025-12-30)",
  
  "workingDirectory": ".",
  "dryRun": true,
  "skipConfirmation": false,
  "verbose": true,
  
  "github": {
    "owner": "your-username",
    "repo": "your-repo",
    "token": "${GITHUB_TOKEN}",
    "createRelease": false,
    "uploadArtifacts": false,
    "draft": true,
    "prerelease": false
  },
  
  "npm": {
    "registry": "https://registry.npmjs.org",
    "token": "${NPM_TOKEN}",
    "publish": false,
    "access": "public",
    "tag": "latest"
  },
  
  "validation": {
    "requireCompletionDocs": false,
    "requireBreakingChangeDoc": false,
    "validateSemanticVersioning": true,
    "allowManualOverride": true
  }
}
