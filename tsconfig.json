{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        // Enable JSON module imports for acknowledged differences registry
        "resolveJsonModule": true,
        // Enable safe iterator handling for for...of loops and spread operators
        // Required for strict mode compilation with iterator features
        // Affects: PrimitiveTokenRegistry.ts (line 128), SemanticTokenRegistry.ts (line 165), 
        //          ThreeTierValidator.ts (line 282)
        "downlevelIteration": true,
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}